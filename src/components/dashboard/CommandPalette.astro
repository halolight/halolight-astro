---

<!-- 命令面板 Modal -->
<div
  id="command-palette"
  class="fixed inset-0 z-[100] hidden"
  role="dialog"
  aria-modal="true"
  aria-labelledby="command-palette-title"
>
  <!-- 背景遮罩 -->
  <div id="command-palette-backdrop" class="fixed inset-0 bg-black/50 transition-opacity"></div>

  <!-- 面板内容 -->
  <div class="fixed inset-0 flex items-start justify-center pt-[15vh] px-4">
    <div
      class="w-full max-w-xl bg-white dark:bg-gray-800 rounded-xl shadow-2xl overflow-hidden transform transition-all"
    >
      <!-- 搜索输入框 -->
      <div class="relative border-b border-gray-200 dark:border-gray-700">
        <svg
          class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input
          id="command-palette-input"
          type="text"
          class="w-full h-14 pl-12 pr-4 text-gray-900 dark:text-white bg-transparent placeholder-gray-400 focus:outline-none"
          placeholder="搜索页面或功能..."
          autocomplete="off"
        />
        <div class="absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400">
          <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded font-mono">ESC</kbd> 关闭
        </div>
      </div>

      <!-- 搜索结果 -->
      <div id="command-palette-results" class="max-h-80 overflow-y-auto py-2">
        <!-- 动态生成的搜索结果 -->
      </div>

      <!-- 底部提示 -->
      <div
        class="flex items-center gap-4 px-4 py-3 border-t border-gray-200 dark:border-gray-700 text-xs text-gray-500 dark:text-gray-400"
      >
        <span class="flex items-center gap-1">
          <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded font-mono">↑↓</kbd> 导航
        </span>
        <span class="flex items-center gap-1">
          <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded font-mono">↵</kbd> 选择
        </span>
        <span class="flex items-center gap-1">
          <kbd class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded font-mono">⌘K</kbd> 打开
        </span>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ searchItems, icons }}>
  const commandPalette = document.getElementById('command-palette');
  const commandPaletteBackdrop = document.getElementById('command-palette-backdrop');
  const commandPaletteInput = document.getElementById('command-palette-input');
  const commandPaletteResults = document.getElementById('command-palette-results');

  let selectedIndex = 0;
  let filteredItems = [...searchItems];

  function openCommandPalette() {
    commandPalette?.classList.remove('hidden');
    commandPaletteInput?.focus();
    renderResults();
  }

  function closeCommandPalette() {
    commandPalette?.classList.add('hidden');
    if (commandPaletteInput) {
      commandPaletteInput.value = '';
    }
    filteredItems = [...searchItems];
    selectedIndex = 0;
  }

  function renderResults() {
    if (!commandPaletteResults) return;

    // 按分类分组
    const grouped = filteredItems.reduce((acc, item) => {
      if (!acc[item.category]) {
        acc[item.category] = [];
      }
      acc[item.category].push(item);
      return acc;
    }, {});

    let html = '';
    let globalIndex = 0;

    for (const [category, items] of Object.entries(grouped)) {
      html += `<div class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">${category}</div>`;

      for (const item of items) {
        const isSelected = globalIndex === selectedIndex;
        html += `
          <a
            href="${item.href}"
            class="command-palette-item flex items-center gap-3 px-4 py-2 cursor-pointer ${
              isSelected
                ? 'bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-400'
                : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700/50'
            }"
            data-index="${globalIndex}"
          >
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              ${icons[item.icon] || ''}
            </svg>
            <span>${item.title}</span>
          </a>
        `;
        globalIndex++;
      }
    }

    if (filteredItems.length === 0) {
      html = `<div class="px-4 py-8 text-center text-gray-500 dark:text-gray-400">没有找到匹配的结果</div>`;
    }

    commandPaletteResults.innerHTML = html;

    // 添加点击事件
    document.querySelectorAll('.command-palette-item').forEach((item) => {
      item.addEventListener('click', () => {
        closeCommandPalette();
      });
    });
  }

  function filterItems(query) {
    const lowerQuery = query.toLowerCase();
    filteredItems = searchItems.filter(
      (item) =>
        item.title.toLowerCase().includes(lowerQuery) ||
        item.category.toLowerCase().includes(lowerQuery)
    );
    selectedIndex = 0;
    renderResults();
  }

  function navigateResults(direction) {
    const maxIndex = filteredItems.length - 1;
    if (direction === 'up') {
      selectedIndex = selectedIndex > 0 ? selectedIndex - 1 : maxIndex;
    } else {
      selectedIndex = selectedIndex < maxIndex ? selectedIndex + 1 : 0;
    }
    renderResults();

    // 滚动到选中项
    const selectedItem = commandPaletteResults?.querySelector(`[data-index="${selectedIndex}"]`);
    selectedItem?.scrollIntoView({ block: 'nearest' });
  }

  function selectCurrentItem() {
    if (filteredItems.length > 0 && filteredItems[selectedIndex]) {
      window.location.href = filteredItems[selectedIndex].href;
      closeCommandPalette();
    }
  }

  // 键盘快捷键
  document.addEventListener('keydown', (e) => {
    // Cmd+K 或 Ctrl+K 打开命令面板
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      if (commandPalette?.classList.contains('hidden')) {
        openCommandPalette();
      } else {
        closeCommandPalette();
      }
    }

    // ESC 关闭命令面板
    if (e.key === 'Escape' && !commandPalette?.classList.contains('hidden')) {
      closeCommandPalette();
    }

    // 方向键导航
    if (!commandPalette?.classList.contains('hidden')) {
      if (e.key === 'ArrowUp') {
        e.preventDefault();
        navigateResults('up');
      } else if (e.key === 'ArrowDown') {
        e.preventDefault();
        navigateResults('down');
      } else if (e.key === 'Enter') {
        e.preventDefault();
        selectCurrentItem();
      }
    }
  });

  // 输入搜索
  commandPaletteInput?.addEventListener('input', (e) => {
    filterItems(e.target.value);
  });

  // 点击背景关闭
  commandPaletteBackdrop?.addEventListener('click', closeCommandPalette);

  // 搜索按钮点击也打开命令面板
  const searchButton = document.getElementById('search-button');
  searchButton?.addEventListener('click', openCommandPalette);
</script>
