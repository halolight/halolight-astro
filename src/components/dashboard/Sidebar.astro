---
/**
 * 侧边栏导航组件
 * 支持收起/展开功能
 */
interface NavItem {
  label: string;
  href: string;
  icon: string;
  badge?: string | number;
}

interface NavGroup {
  title?: string;
  items: NavItem[];
}

const { currentPath = '/' } = Astro.props;

const navigation: NavGroup[] = [
  {
    items: [
      { label: '仪表盘', href: '/dashboard', icon: 'home' },
      { label: '分析', href: '/dashboard/analytics', icon: 'chart' },
    ],
  },
  {
    title: '管理',
    items: [
      { label: '用户管理', href: '/dashboard/users', icon: 'users' },
      { label: '账户', href: '/dashboard/accounts', icon: 'building' },
      { label: '文档', href: '/dashboard/documents', icon: 'document' },
      { label: '文件', href: '/dashboard/files', icon: 'folder' },
    ],
  },
  {
    title: '通讯',
    items: [
      { label: '消息', href: '/dashboard/messages', icon: 'message', badge: 5 },
      { label: '通知', href: '/dashboard/notifications', icon: 'bell', badge: 12 },
      { label: '日历', href: '/dashboard/calendar', icon: 'calendar' },
    ],
  },
  {
    title: '系统',
    items: [
      { label: '设置', href: '/dashboard/settings', icon: 'settings' },
      { label: '个人资料', href: '/dashboard/profile', icon: 'user' },
    ],
  },
];

const brandName = import.meta.env.PUBLIC_BRAND_NAME || 'Halolight';

// 图标映射
const icons: Record<string, string> = {
  home: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>`,
  chart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>`,
  users: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>`,
  building: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`,
  document: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>`,
  folder: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>`,
  message: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>`,
  bell: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>`,
  calendar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>`,
  settings: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`,
  user: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>`,
  chevronLeft: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>`,
  chevronRight: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>`,
};

function isActive(href: string): boolean {
  if (href === '/dashboard') {
    return currentPath === '/dashboard' || currentPath === '/dashboard/';
  }
  return currentPath.startsWith(href);
}
---

<aside
  id="sidebar"
  class="fixed inset-y-0 left-0 z-50 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 transform -translate-x-full lg:translate-x-0 transition-all duration-300 sidebar-expanded"
  data-collapsed="false"
>
  <div class="flex flex-col h-full">
    <!-- Logo -->
    <div class="flex items-center h-16 px-4 border-b border-gray-200 dark:border-gray-700">
      <a href="/dashboard" class="flex items-center gap-3 overflow-hidden">
        <div
          class="w-8 h-8 rounded-lg bg-primary-600 flex items-center justify-center flex-shrink-0"
        >
          <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none">
            <path d="M12 4L20 20H4L12 4Z" stroke="currentColor" stroke-width="2"></path>
          </svg>
        </div>
        <span class="font-bold text-gray-900 dark:text-white sidebar-label whitespace-nowrap"
          >{brandName}</span
        >
      </a>
    </div>

    <!-- 导航 -->
    <nav class="flex-1 overflow-y-auto py-4 px-3">
      {
        navigation.map((group, groupIndex) => (
          <div class={groupIndex > 0 ? 'mt-6' : ''}>
            {group.title && (
              <h3 class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider sidebar-label whitespace-nowrap">
                {group.title}
              </h3>
            )}
            <ul class="space-y-1">
              {group.items.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class={`flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors relative group ${
                      isActive(item.href)
                        ? 'bg-primary-50 text-primary-700 dark:bg-primary-900/20 dark:text-primary-400'
                        : 'text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700/50'
                    }`}
                    title={item.label}
                  >
                    <svg
                      class="w-5 h-5 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      set:html={icons[item.icon]}
                    />
                    <span class="flex-1 sidebar-label whitespace-nowrap">{item.label}</span>
                    {item.badge && (
                      <span class="px-2 py-0.5 text-xs font-medium bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-400 rounded-full sidebar-badge">
                        {item.badge}
                      </span>
                    )}
                    {/* 收起状态下的 tooltip */}
                    <span class="sidebar-tooltip absolute left-full ml-2 px-2 py-1 bg-gray-900 dark:bg-gray-700 text-white text-xs rounded opacity-0 pointer-events-none whitespace-nowrap z-50 transition-opacity">
                      {item.label}
                      {item.badge && ` (${item.badge})`}
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </nav>

    <!-- 底部：收起/展开按钮 + 用户信息 -->
    <div class="border-t border-gray-200 dark:border-gray-700">
      <!-- 收起/展开按钮 -->
      <button
        id="sidebar-collapse-btn"
        class="w-full flex items-center justify-center gap-2 px-4 py-3 text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700/50 transition-colors"
        title="收起/展开侧边栏"
      >
        <svg
          id="collapse-icon"
          class="w-5 h-5 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          set:html={icons.chevronLeft}
        />
        <span class="text-sm sidebar-label">收起菜单</span>
      </button>

      <!-- 用户信息 -->
      <div class="p-4 border-t border-gray-200 dark:border-gray-700">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center flex-shrink-0"
          >
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">管</span>
          </div>
          <div class="flex-1 min-w-0 sidebar-label">
            <p class="text-sm font-medium text-gray-900 dark:text-white truncate">管理员</p>
            <p class="text-xs text-gray-500 dark:text-gray-400 truncate">admin@halolight.h7ml.cn</p>
          </div>
          <a
            href="/auth/login"
            class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 sidebar-label"
            title="退出登录"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</aside>

<!-- 移动端遮罩 -->
<div id="sidebar-backdrop" class="fixed inset-0 z-40 bg-black/50 lg:hidden hidden"></div>

<style>
  /* 展开状态 */
  .sidebar-expanded {
    width: 16rem; /* w-64 = 256px */
  }

  /* 收起状态 */
  .sidebar-collapsed {
    width: 4.5rem; /* 72px */
  }

  .sidebar-collapsed .sidebar-label {
    display: none;
  }

  .sidebar-collapsed .sidebar-badge {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(25%, -25%);
    padding: 0.125rem 0.375rem;
    font-size: 0.625rem;
  }

  /* 收起状态下的 tooltip */
  .sidebar-collapsed a:hover .sidebar-tooltip {
    opacity: 1;
  }

  .sidebar-expanded .sidebar-tooltip {
    display: none;
  }

  /* 收起状态下图标旋转 */
  .sidebar-collapsed #collapse-icon {
    transform: rotate(180deg);
  }

  /* 收起状态下导航项居中 */
  .sidebar-collapsed nav a {
    justify-content: center;
    padding-left: 0;
    padding-right: 0;
  }

  .sidebar-collapsed nav ul {
    padding-left: 0;
    padding-right: 0;
  }

  /* 收起状态下 logo 居中 */
  .sidebar-collapsed .flex.items-center.h-16 {
    justify-content: center;
  }

  /* 收起状态下用户头像居中 */
  .sidebar-collapsed .p-4 .flex.items-center {
    justify-content: center;
  }

  /* 收起状态下收起按钮 */
  .sidebar-collapsed #sidebar-collapse-btn {
    padding-left: 0;
    padding-right: 0;
  }
</style>

<script>
  const sidebar = document.getElementById('sidebar');
  const backdrop = document.getElementById('sidebar-backdrop');
  const toggleButton = document.getElementById('sidebar-toggle');
  const collapseBtn = document.getElementById('sidebar-collapse-btn');
  const mainContent = document.getElementById('main-content');

  // 从 localStorage 读取收起状态
  const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';

  function updateSidebarState(collapsed: boolean) {
    if (collapsed) {
      sidebar?.classList.remove('sidebar-expanded');
      sidebar?.classList.add('sidebar-collapsed');
      mainContent?.classList.remove('lg:pl-64');
      mainContent?.classList.add('lg:pl-[4.5rem]');
    } else {
      sidebar?.classList.remove('sidebar-collapsed');
      sidebar?.classList.add('sidebar-expanded');
      mainContent?.classList.remove('lg:pl-[4.5rem]');
      mainContent?.classList.add('lg:pl-64');
    }
    sidebar?.setAttribute('data-collapsed', String(collapsed));
  }

  // 初始化状态
  if (isCollapsed) {
    updateSidebarState(true);
  }

  // 收起/展开按钮点击事件
  collapseBtn?.addEventListener('click', () => {
    const currentCollapsed = sidebar?.getAttribute('data-collapsed') === 'true';
    const newCollapsed = !currentCollapsed;
    updateSidebarState(newCollapsed);
    localStorage.setItem('sidebar-collapsed', String(newCollapsed));
  });

  // 移动端菜单切换
  function toggleMobileSidebar() {
    sidebar?.classList.toggle('-translate-x-full');
    backdrop?.classList.toggle('hidden');
  }

  toggleButton?.addEventListener('click', toggleMobileSidebar);
  backdrop?.addEventListener('click', toggleMobileSidebar);

  // 响应窗口大小变化
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024) {
      sidebar?.classList.remove('-translate-x-full');
      backdrop?.classList.add('hidden');
    }
  });
</script>
