---
import '../styles/globals.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = import.meta.env.PUBLIC_APP_TITLE || 'Admin Pro',
  description = '现代化中文后台管理系统',
} = Astro.props;

const brandName = import.meta.env.PUBLIC_BRAND_NAME || 'Halolight';
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | {brandName}</title>

    <!-- 51.la 统计 -->
    <script
      charset="UTF-8"
      id="LA_COLLECT"
      src="//sdk.51.la/js-sdk-pro.min.js?id=L1NaKSoU1jvMh9mE&ck=L1NaKSoU1jvMh9mE&autoTrack=true&hashMode=true&screenRecord=true"
    ></script>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XMS590XWNN"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-XMS590XWNN');
    </script>

    <!-- 主题初始化脚本 -->
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (
        theme === 'dark' ||
        (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <slot />
  </body>
</html>
