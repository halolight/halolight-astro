---
/**
 * 服务条款页面
 */
import LegalLayout from '../layouts/LegalLayout.astro';

const brandName = import.meta.env.PUBLIC_BRAND_NAME || 'Halolight';
const lastUpdated = '2024年1月15日';
---

<LegalLayout title="服务条款">
  <h1>服务条款</h1>
  <p class="text-gray-500 dark:text-gray-400">最后更新：{lastUpdated}</p>

  <h2>1. 接受条款</h2>
