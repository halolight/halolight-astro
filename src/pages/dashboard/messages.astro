---
/**
 * 消息页面
 */
import DashboardLayout from '../../layouts/DashboardLayout.astro';

const messages = [
  {
    id: 1,
    sender: '张三',
    avatar: '张',
    subject: '关于项目进度的讨论',
    preview: '您好，想和您讨论一下项目的最新进展...',
    time: '10:30',
    unread: true,
  },
  {
    id: 2,
    sender: '李四',
    avatar: '李',
    subject: '会议邀请',
    preview: '邀请您参加明天下午3点的项目评审会议...',
    time: '09:15',
    unread: true,
  },
  {
    id: 3,
    sender: '王五',
    avatar: '王',
    subject: '文档审核完成',
    preview: '您提交的技术文档已经审核通过...',
    time: '昨天',
    unread: false,
  },
  {
    id: 4,
    sender: '系统通知',
    avatar: '系',
    subject: '账户安全提醒',
    preview: '检测到您的账户在新设备上登录...',
    time: '昨天',
    unread: false,
  },
  {
    id: 5,
    sender: '赵六',
    avatar: '赵',
    subject: '功能需求确认',
    preview: '请确认附件中的功能需求清单...',
    time: '2天前',
    unread: false,
  },
];
---

<DashboardLayout title="消息">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">消息中心</h2>
        <p class="mt-1 text-gray-600 dark:text-gray-400">查看和管理您的消息</p>
      </div>
      <button class="btn-primary">写新消息</button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
      <!-- 左侧导航 -->
      <div class="card p-4">
        <nav class="space-y-1">
          <a
            href="#"
            class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary-50 text-primary-700 dark:bg-primary-900/20 dark:text-primary-400"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
              ></path>
            </svg>
            <span>收件箱</span>
            <span class="ml-auto px-2 py-0.5 text-xs bg-primary-600 text-white rounded-full">2</span
            >
          </a>
          <a
            href="#"
            class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700/50"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            <span>已发送</span>
          </a>
          <a
            href="#"
            class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700/50"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
              ></path>
            </svg>
            <span>已加星</span>
          </a>
          <a
            href="#"
            class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700/50"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              ></path>
            </svg>
            <span>已删除</span>
          </a>
        </nav>
      </div>

      <!-- 消息列表 -->
      <div class="lg:col-span-3 card overflow-hidden">
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
          {
            messages.map((msg) => (
              <div
                class={`p-4 hover:bg-gray-50 dark:hover:bg-gray-800/50 cursor-pointer ${msg.unread ? 'bg-blue-50/50 dark:bg-blue-900/10' : ''}`}
              >
                <div class="flex items-start gap-4">
                  <div
                    class={`w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0 ${msg.unread ? 'bg-primary-100 dark:bg-primary-900/30' : 'bg-gray-100 dark:bg-gray-700'}`}
                  >
                    <span
                      class={`text-sm font-medium ${msg.unread ? 'text-primary-700 dark:text-primary-400' : 'text-gray-600 dark:text-gray-400'}`}
                    >
                      {msg.avatar}
                    </span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center justify-between mb-1">
                      <p
                        class={`text-sm ${msg.unread ? 'font-semibold text-gray-900 dark:text-white' : 'font-medium text-gray-700 dark:text-gray-300'}`}
                      >
                        {msg.sender}
                      </p>
                      <span class="text-xs text-gray-500 dark:text-gray-400">{msg.time}</span>
                    </div>
                    <p
                      class={`text-sm ${msg.unread ? 'font-medium text-gray-900 dark:text-white' : 'text-gray-700 dark:text-gray-300'}`}
                    >
                      {msg.subject}
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400 truncate">{msg.preview}</p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
